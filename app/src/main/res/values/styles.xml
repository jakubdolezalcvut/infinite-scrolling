<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppToolbar" parent="AppTheme">
        <item name="android:background">@color/toolbar_background</item>
        <item name="titleTextColor">@color/toolbar_text</item>
    </style>

    <style name="ProgressBar" parent="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding">
        <item name="android:visibility">gone</item>
        <item name="android:indeterminate">true</item>
        <item name="mpb_useIntrinsicPadding">false</item>
        <item name="mpb_progressStyle">horizontal</item>
        <item name="mpb_progressTint">@color/progressbar_tint</item>
    </style>

    <style name="ListTitle" parent="AppTheme">
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:textColor">@color/list_item_title</item>
    </style>

    <style name="ListPrompt" parent="AppTheme">
        <item name="android:textColor">@color/list_prompt</item>
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DetailHolder" parent="AppTheme">
        <item name="cardCornerRadius">@dimen/list_corner_holder</item>
        <item name="cardBackgroundColor">@color/list_item_background</item>

    </style>

    <style name="DetailPage" parent="AppTheme">
        <item name="android:background">@color/detail_background</item>
    </style>

    <style name="DetailTitle" parent="AppTheme">
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:textColor">@color/detail_title</item>
    </style>

</resources>